<%- include('../layout/header') %>

    <div class="container-fluid mt-4">
        <div class="container">
            <div class="p-5 rounded-3 bg-secondary">
                <h1 class="display-5 fw-bold text-primary">
                    <%= titre %>
                </h1>
                <p class="col-md-12 fs-4 text-justify">Lorem ipsum dolor sit amet consectetur adipisicing elit.
                    Libero doloribus, facere sint distinctio reprehenderit, similique fuga molestiae adipisci
                    optio deserunt expedita ab veniam aperiam repellendus quia culpa possimus! Dolores, aperiam.
                </p>
                <hr>

                <form action="<%= action %>" enctype="multipart/form-data" method="POST" class="needs-validation"
                    novalidate>
                    <div class="row">
                        <div class="col-md-6 col-sm-12 col-12 mt-3">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" placeholder="Password" id="test1" name="test1" required>
                                <label class="required">Password</label>
                                <div class="invalid-feedback">
                                    Please choose a username.
                                </div>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 col-12 mt-3">
                            <div class="form-floating mb-3">
                                <select class="form-control select2" name="test" id="test" required>
                                    <option value="" disabled selected>Choisir un</option>
                                    <option value="1">One</option>
                                    <option value="1">One</option>
                                    <option value="1">One</option>
                                    <option value="1">One</option>
                                </select>
                                <label class="required">Passwo fsfdsfsd rd</label>
                                <div class="invalid-feedback">
                                    Please choose a username.
                                </div>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 mt-3">
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" placeholder="Password" required>
                                <label class="required">Password</label>
                                <div class="invalid-feedback">
                                    Please choose a username.
                                </div>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 mt-3">
                            <div class="form-floating mb-3">
                                <input type="text" class="datepicker_input_year form-control" id="datepicker"
                                    placeholder="JJ/MM/AAAA" autocomplete="off" required>
                                <label class="required" for="datepicker">Date</label>
                                <div class="invalid-feedback">
                                    Please choose a username.
                                </div>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 mt-3">
                            <button class="btn btn-primary w-100" type="submit">
                                <%= titre %>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


    
    <% if (modifier) { %>
    <script>
        window.addEventListener("load", function () {
            $("#test1").val('<%= test %>');
            $("#test").val('<%= test %>').change();
        });
    </script>
    <% } %>

    <%- include('../layout/footer') %>