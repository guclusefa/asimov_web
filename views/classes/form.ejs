<%- include('../layout/header') %>


<div class="container-fluid bg-secondary py-5">
    <div class="container">
            <div>
                <h1 class="display-5 fw-bold text-primary">
                    <%= titre %>
                </h1>
                <p class="col-md-12 fs-4 text-justify">Lorem ipsum dolor sit amet consectetur adipisicing elit. Libero
                    doloribus, facere sint distinctio reprehenderit, similique fuga molestiae adipisci optio deserunt
                    expedita ab veniam aperiam repellendus quia culpa possimus! Dolores, aperiam.
                </p>
                <hr>

                <form action="<%= action %>" method="POST" class="needs-validation" novalidate>
                    <div class="row">
                        <div class="col-md-6 col-sm-12 col-12 mt-3">
                            <div class="form-floating mb-3">
                                <select class="form-control" id="classe" name="classe" required>
                                    <option value="" disabled selected>Choisir une classe</option>
                                    <% lesClasses.forEach(function(uneClasse){ %>
                                    <option value="<%= uneClasse.classe_id %>"><%= uneClasse.classe_libelle %></option>
                                    <% })%>
                                </select>
                                <label class="required">Classe</label>
                                <div class="invalid-feedback">
                                    Choisir une classe valide !
                                </div>
                                <div class="valid-feedback">
                                    Classe valide
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-12 col-12 mt-3">
                            <div class="form-floating mb-3">
                                <input type="text" class="datepicker_input_year form-control" autocomplete="off"
                                    placeholder="Date de naissance" id="annee" name="annee"
                                    value="<% if (modifier) {%><%=uneClasse.cursus_anneeScolaire%><%} %>" required>
                                <label class="required">Année Scolaire</label>
                                <div class="invalid-feedback">
                                    Choisir une année scolaire valide !
                                </div>
                                <div class="valid-feedback">
                                    Année Scolaire valide
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 col-sm-12 col-12 mt-3">
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" placeholder="Email" id="libelle" name="libelle"
                                    required>
                                <label class="required">Libellé</label>
                                <div class="invalid-feedback">
                                    Choisir un libellé valide !
                                </div>
                                <div class="valid-feedback">
                                    Libellé valide
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 col-12 mt-3">
                            <div class="form-floating mb-3">
                                <select class="form-control" id="principal" name="principal" required>
                                    <option value="" disabled selected>Choisir un professeur principal</option>
                                    <% lesPrincipales.forEach(function(unePrincipale){ %>
                                    <option value="<%= unePrincipale.user_id %>"><%= unePrincipale.user_nom %></option>
                                    <% })%>
                                </select>
                                <label class="required">Professeur principal</label>
                                <div class="invalid-feedback">
                                    Choisir un professeur principal valide !
                                </div>
                                <div class="valid-feedback">
                                    Professeur principal valide
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 mt-3">
                            <button class="btn btn-primary w-100" type="submit">
                                <%= titre %>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
    </script>

    <% if (modifier) { %>
        <script>
            window.addEventListener("load", function () {
                $("#nom").val('<%= unEleve.user_nom %>');
                $("#prenom").val('<%= unEleve.user_prenom %>');
                $("#sexe").val('<%= unEleve.user_sexe %>').change();
                $("#email").val('<%= unEleve.user_mail %>');
                $("#tel").val('<%= unEleve.user_tel %>');
            });
        </script>
        <% } %>

            <%- include('../layout/footer') %>