<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/images/favicon.ico" />
  <title>ASIMOV | <%= titre %>
  </title>

  <!-- Font + Theme -->
  <link href='https://fonts.googleapis.com/css?family=Antonio' rel='stylesheet'>
  <link rel="stylesheet" href="/css/theme.css">

  <!-- Bootstrap + FontAwesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  <link rel="stylesheet" href="/css/bootstrap.css">

  <!-- Datepicker -->
  <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.1.4/dist/css/datepicker.min.css'>

  <!-- select2 -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
  <link rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.2.0/dist/select2-bootstrap-5-theme.min.css" />

  <!-- DataTable -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/searchpanes/1.4.0/css/searchPanes.bootstrap5.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/select/1.3.3/css/select.bootstrap5.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/rowreorder/1.2.8/css/rowReorder.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.dataTables.min.css">

  <!-- Custom -->
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <% if (typeof user_info !='undefined' && user_info !='' ) { %>
  <div class="sidebar sidebar-dark sidebar-fixed" id="sidebar">
    <ul class="sidebar-nav" data-coreui="navigation" data-simplebar="init">
      <div class="simplebar-wrapper" style="margin: 0px;">
        <div class="simplebar-height-auto-observer-wrapper">
          <div class="simplebar-height-auto-observer"></div>
        </div>
        <div class="simplebar-mask">
          <div class="simplebar-offset" style="right: 0px; bottom: 0px;">
            <div class="simplebar-content-wrapper" style="height: 100%; overflow: hidden scroll;">
              <div class="simplebar-content" style="padding: 0px;">
                <!-- header left  -->

                <li class="nav-title">Les evaluations</li>
                <li class="nav-group">
                  <a class="nav-link nav-group-toggle" href="#">
                    <i class="fa-solid fa-award fa-xl iclass"></i>
                    Les notes
                  </a>
                  <ul class="nav-group-items">
                    <li class="nav-item">
                      <a class="nav-link" href="/notes/fiche_eleve/0/0">
                        Notes d'élèves
                      </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/notes/fiche_prof/<%= user_info.user_id %>">
                        Note de professeurs
                      </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/notes/fiche_classe/<%= user_info.user_id %>">
                        Note de classes
                      </a>
                    </li>
                  </ul>
                </li>

                <li class="nav-title">Les evaluations</li>
                <li class="nav-group">
                  <a class="nav-link nav-group-toggle" href="#">
                    <i class="fa-solid fa-bookmark fa-xl iclass"></i>
                    Les évaluations
                  </a>
                  <ul class="nav-group-items">
                    <li class="nav-item">
                      <a class="nav-link" href="/evaluations/ajouter">
                        Ajouter une évaluation
                      </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/evaluations/liste">
                        Liste des évaluations
                      </a>
                    </li>
                  </ul>
                </li>

                <li class="nav-title">Les classes</li>
                <li class="nav-group">
                  <a class="nav-link nav-group-toggle" href="#">
                    <i class="fa-solid fa-school fa-xl iclass"></i>
                    Les classes
                  </a>
                  <ul class="nav-group-items">
                    <li class="nav-item">
                      <a class="nav-link" href="/classes/ajouter">
                        Ajouter une classe
                      </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/classes/liste">
                        Liste des classes
                      </a>
                    </li>
                  </ul>
                </li>

                <li class="nav-title">Les élèves</li>
                <li class="nav-group">
                  <a class="nav-link nav-group-toggle" href="#">
                    <i class="fa-solid fa-user fa-xl iclass"></i>
                    Les élèves
                  </a>
                  <ul class="nav-group-items">
                    <li class="nav-item">
                      <a class="nav-link" href="/eleves/ajouter">
                        Ajouter un(e) élève
                      </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/eleves/liste">
                        Liste des élèves
                      </a>
                    </li>
                  </ul>
                </li>

                <li class="nav-title">Les professeurs</li>
                <li class="nav-group">
                  <a class="nav-link nav-group-toggle" href="#">
                    <i class="fa-solid fa-user-graduate fa-xl iclass"></i>
                    Les proffeseurs
                  </a>
                  <ul class="nav-group-items">
                    <li class="nav-item">
                      <a class="nav-link" href="/profs/ajouter">
                        Ajouter un(e) professeur(e)
                      </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/profs/liste">
                        Liste des professeur(e)s
                      </a>
                    </li>
                  </ul>
                </li>

                <li class="nav-title">Les matières</li>
                <li class="nav-group">
                  <a class="nav-link nav-group-toggle" href="#">
                    <i class="fa-solid fa-book fa-xl iclass"></i>
                    Les matières
                  </a>
                  <ul class="nav-group-items">
                    <li class="nav-item">
                      <a class="nav-link" href="/matieres/ajouter">
                        Ajouter une matière
                      </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/matieres/liste">
                        Liste des matières
                      </a>
                    </li>
                  </ul>
                </li>
              </div>
            </div>
          </div>
        </div>

        <div class="simplebar-track simplebar-horizontal" style="visibility: hidden;">
          <div class="simplebar-scrollbar" style="width: 0px; display: none;"></div>
        </div>
        <div class="simplebar-track simplebar-vertical" style="visibility: visible;">
          <div class="simplebar-scrollbar"
            style="height: 465px; transform: translate3d(0px, 0px, 0px); display: block;">
          </div>
        </div>
    </ul>
  </div>
  <% } %>

  <div class="wrapper d-flex flex-column min-vh-100 bg-light">
    <nav class="monheader container-fluid bg-light content-header">
      <div class="container text-light py-3">
        <div class="row">
          <div class="col-4">
            
            <% if (typeof user_info !='undefined' && user_info !='' ) { %>
            <div class="header-toggler"
              onclick="coreui.Sidebar.getInstance(document.querySelector('#sidebar')).toggle()">
              <i class="fas fa-bars"></i>
            </div>
            <% } %>

          </div>
          <div class="col-4 text-center">
            <div class="d-none d-md-block d-print-block">
              <a href="/"><img src="/images/logo_title.png" style="height:50px; width: auto; margin-top: -5px;" /></a>
            </div>

            <div class="d-block d-md-none">
              <a href="/"><img src="/images/logo.svg" style="height:50px; width: auto; margin-top: -5px;" /></a>
            </div>
          </div>

          <% if (typeof user_info !='undefined' && user_info !='' ) { %>
            <div class="col-4 text-end header-toggler">
              <div class="btn-group">
                <div class="dropdown-toggle d-none d-md-block d-print-block" type="button" data-bs-toggle="dropdown"
                  aria-expanded="false">
                  <%= user_info.user_nom %> <%= user_info.user_prenom %>
                </div>
                <div class="dropdown-toggle d-block d-md-none" type="button" data-bs-toggle="dropdown"
                  aria-expanded="false">
                  <%= user_info.user_nom[0] %><%= user_info.user_prenom[0] %>
                </div>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="/compte">Mon compte</a></li>
                  <li>
                    <hr class="dropdown-divider">
                  </li>
                  <li><a class="dropdown-item" href="/deconnexion">Déconnexion</a></li>
                </ul>
              </div>
            </div>
            <% } else { %>
              <div class="col-4 text-end header-toggler">
                <div class="btn-group">
                  <div class="  d-none d-md-block d-print-block">
                    <a href="/connexion">Connexion</a>
                  </div>
                  <div class="d-block d-md-none">
                    <a href="/connexion"><i class="fas fa-sign-in"></i></a>
                  </div>
                </div>
              </div>
              <% } %>
        </div>
      </div>
    </nav>

    <%- include('alert') %>